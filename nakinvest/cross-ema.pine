    r = ""
    if useTrendFilter
        r := r + (isLong ? not trendOkBull ? "‚ùå Trend Filter\n" : "‚úÖ Trend Filter\n" : not trendOkBear ? "‚ùå Trend Filter\n" : "‚úÖ Trend Filter\n")
    if useStochFilter
        r := r + (isLong ? not stochOkBull ? "‚ùå Stoch Filter\n" : "‚úÖ Stoch Filter\n" : not stochOkBear ? "‚ùå Stoch Filter\n" : "‚úÖ Stoch Filter\n")
    r := r + (isLong ? not enableLong ? "‚ùå Long Disabled\n" : "‚úÖ Long Enabled\n" : not enableShort ? "‚ùå Short Disabled\n" : "‚úÖ Short Enabled\n")
    if useNoTradeZone
        r := r + (isInNoTradeZone ? "‚ùå In No Trade Zone (EMA40-80)\n" : "‚úÖ Clear Trading Zone\n")
    if useVolumeFilter
        r := r + (not volumeOk ? "‚ùå Volume Filter\n" : "‚úÖ Volume Filter\n")
    
    // Add MACD confirmation status
    if useMacdConfirmation
        r := r + (isLong ? not macdBullish ? "‚ùå MACD Confirmation\n" : "‚úÖ MACD Confirmation\n" : not macdBearish ? "‚ùå MACD Confirmation\n" : "‚úÖ MACD Confirmation\n")
    
    // Add EMA cross status for each pattern type
    if useEmaCrossRules
        if bull123 or bear123
            r := r + "\n123 Pattern EMA Cross Details:\n"
            candle0CrossesEma9 = isLong ? crossesAbove(open, close, ema9) : crossesBelow(open, close, ema9)
            noEma40Cross0 = not crossesEma(open, close, ema40)
            noEma80Cross0 = not crossesEma(open, close, ema80)
            r := r + "  Current Candle:\n"
